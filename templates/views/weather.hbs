    <!-- main header -->
    <div class="container-fluid main_header my-5">
        <div class="row">
            <div class="col-lg-6">
                <h3 style="color: navy; font-weight:700; font-size:2.5rem;"><i
                        class="fa fa-search"></i>&nbsp;&nbsp;Temperature of your City</h3>
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City  name..." autocomplete="off">
                        <button type="submit" id="submitBtn">Search<i class="fa fa-search"
                                style="margin-left: 0.5rem; font-size:1.5rem;"></i></button>
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p class="day">Tuesday</p>
                        <p class="date">13 | OCT | 2020</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name" style="border-bottom: 2px solid white; font-weight:700;">
                            Get Output Here....
                        </p>
                        <div class="middle_layer data-hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fas fa-cloud-rain" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
                <div class="content mt-5">

                    <h3 id="marker">
                        <i class="fa fa-map-marker ms-5 mb-3" style="color: blue ;"></i> Temperature less than 35
                        <sup>o</sup>C
                    </h3>

                    <h3 id="marker">
                        <i class="fa fa-map-marker ms-5 mb-3" style="color:green ;"></i> Temperature between
                        35<sup>o</sup>C & 38<sup>o</sup>C
                    </h3>

                    <h3 id="marker">
                        <i class="fa fa-map-marker ms-5 mb-3" style="color: red;"></i> Temperature greater than
                        38<sup>o</sup>C
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row mx-auto align-items-center">
                    <h1 class="" style="font-weight:700; color: orangered;"><i
                            class="fa fa-laptop"></i>&nbsp;&nbsp;&nbsp;Location of your City</h1>

                    <div id='map'></div>
                </div>
            </div>
        </div>

    </div>


    <!-- footer section -->
    {{>footer}}
    <script src="js/index.js"></script>
    <script>

        const getCurrentDay = () => {
            weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime1 = new Date();
            // console.log(currentTime.getDay());
            //returns the index number of the days...
            // we have to create the array of it..
            let day = weekday[currentTime1.getDay()];
            return day;
        };

        const getCurrentDate = () => {
            var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "Jun",
                "Jul",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec",
            ]
            let currentTime2 = new Date();
            let month = currentTime2.getMonth();
            let date = currentTime2.getDate();
            let year = currentTime2.getFullYear();
            let fullDate = date + " | " + months[month] + " | " + year;
            return fullDate;
        };
        const curDate = document.querySelector(".date");
        const curDay = document.querySelector(".day");
        curDay.innerHTML = getCurrentDay();
        curDate.innerHTML = getCurrentDate();

    </script>

